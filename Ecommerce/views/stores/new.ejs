<body>
    <header>
    <div class="head container-fluid">
        <div class="row">
            <div class="col-12"><h1 class="text-center">It will take only a minute...</h1></div>
        </div>
    </div>
    </header>
    <section>
        <div class="create container-fluid">
            <div class="form row">
                <form action=""></form>
                <div class="logoS col">
                    <h4 class="text-center">Store logo comming soon!</h4>
                    <!-- <button class="btn btn-info float-right">Save!</button>
                    <input type="file" name="logo" id="logo">
                    <div class="logoImg">
                        <img src="" alt="logopreview">
                    </div> -->
                </div>
                </form> 
                <form method="POST"action="/stores">
                    <div class="col-12">
                        <div class="form-group">
                        <label for="name">Introduce your store name: </label>
                        <input class="form-control " type="text" name="name" id="name" placeholder="Store name" required>
                        </div> 
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                        <label for="owner">Owner full name: </label>
                        <input class="form-control " type="text" name="owner" id="owner" placeholder="full name" required>
                        </div> 
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                        <label for="email">Introduce your contact email: </label>
                        <input class="form-control " type="email" name="email" id="email" placeholder="email@email.com" required>
                        </div> 
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                        <label for="location">Store location: </label>
                        <input class="form-control " type="text" name="location" id="location" placeholder="Spain" required>
                        </div> 
                    </div>
                    <div class="col-12">
                        <button class="float-right btn btn-dark">Enter</button>
                    </div>
                </form>

            </div>
        </div>
    </section>

</body>
